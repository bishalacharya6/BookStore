@model List<Company>

<style>
    :root {
        --primary-color: #8B4513; /* Saddle Brown */
        --secondary-color: #D2691E; /* Chocolate */
        --background-color: #F4E1D2; /* Light Peach */
        --text-color: #5D4037; /* Dark Brown */
        --table-header-bg: #8B4513; /* Saddle Brown for table header */
        --table-hover-bg: #F5DEB3; /* Wheat color for hover effect */
    }

    body {
        background-color: var(--background-color);
        color: var(--text-color);
    }

    .table-dark {
        background-color: var(--table-header-bg) !important;
    }

    .table-hover tbody tr:hover {
        background-color: var(--table-hover-bg) !important;
    }

    .btn-primary {
        background-color: var(--primary-color);
        border-color: var(--primary-color);
    }

    .btn-warning {
        background-color: #D2691E;
        border-color: #D2691E;
    }

    .btn-danger {
        background-color: #A52A2A;
        border-color: #A52A2A;
    }
</style>

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-5 fw-bold" style="color: var(--text-color);">Company List</h1>
        <button class="btn btn-primary">
            <a asp-controller="Company" asp-action="CreateCompany" class="text-white text-decoration-none">
                <i class="bi bi-plus-circle me-2"></i>
                Create New Company
            </a>
        </button>
    </div>
    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">Company Name</th>
                        <th scope="col">City</th>
                        <th scope="col">State</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model)
                    {
                        <tr>
                            <td>@obj.Name</td>
                            <td>@obj.City</td>
                            <td>@obj.State</td>
                            <td>
                                <div class="d-flex gap-2">
                                    <a class="btn btn-warning btn-sm" asp-controller="Company" asp-action="EditCompany" asp-route-id="@obj.Id">
                                        <i class="bi bi-pencil-square me-1"></i>
                                        Edit
                                    </a>
                                    <form asp-controller="Company" asp-action="DeleteCompany" asp-route-id="@obj.Id" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this Company?');">
                                            <i class="bi bi-trash me-1"></i>
                                            Delete
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>