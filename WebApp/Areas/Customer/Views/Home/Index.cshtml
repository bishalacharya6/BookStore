@model IEnumerable<Product>

<div class="home-container">
    <!-- Hero Banner Section -->
    <div class="hero-banner position-relative text-white text-center">
        <div class="banner-overlay position-absolute top-0 start-0 w-100 h-100"></div>
        <div class="container position-relative py-5">
            <h1 class="display-4 fw-bold mb-3">Discover Your Next Great Read</h1>
            <p class="lead mb-4">Explore our curated collection of books that will transport you to new worlds</p>
            <div class="d-flex justify-content-center">
                <a href="#products" class="btn btn-light btn-lg me-3">
                    <i class="bi bi-book me-2"></i>Browse Books
                </a>
                <a href="#" class="btn btn-outline-light btn-lg">
                    <i class="bi bi-journal-plus me-2"></i>New Arrivals
                </a>
            </div>
        </div>
    </div>

    <!-- Product Section -->
    <div class="container-fluid py-5" id="products">
        <div class="text-center mb-5">
            <h2 class="display-6 fw-semibold">Our Book Collection</h2>
            <p class="text-muted">Discover books that inspire, entertain, and transform</p>
        </div>

        <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4">
            @foreach (var product in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm border-2 position-relative overflow-hidden">
                        <div class="card-badge position-absolute top-0 end-0 m-3 text-white px-3 py-1 rounded-pill">
                            Sale
                        </div>
                        <img src="@product.ImageUrl" class="card-img-top object-fit-cover" alt="@product.Title" style="height: 375px;">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title mb-2 text-truncate text-center">@product.Title</h5>
                            <p class="card-text text-muted mb-3 text-center">
                                by @product.Author
                            </p>
                            <div class="d-flex justify-content-between align-items-center mt-auto">
                                <div>
                                    <span class="text-decoration-line-through text-muted me-2 small">
                                        $@product.ListPrice.ToString("F2")
                                    </span>
                                    <span class="fw-bold text-primary fs-5">
                                        $@product.Price100.ToString("F2")
                                    </span>
                                </div>
                                <a asp-action="ProductDetails" asp-route-productId="@product.Id" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-info-circle me-1"></i> Details
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<!-- Custom CSS -->
<style>
    :root {
        --primary-color: #8B4513; /* Saddle Brown */
        --secondary-color: #D2691E; /* Chocolate */
        --background-color: #F4E1D2; /* Light Peach */
        --text-color: #5D4037; /* Dark Brown */
    }

    .hero-banner {
        background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
        height: 500px;
        display: flex;
        align-items: center;
    }

    .banner-overlay {
        background: rgba(0,0,0,0.4);
    }

    .card-badge {
        background-color: var(--secondary-color) !important;
        font-size: 0.75rem;
    }

    .card:hover {
        transform: translateY(-10px);
        transition: transform 0.3s ease;
        box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
    }

    .btn-primary {
        background-color: var(--primary-color);
        border-color: var(--primary-color);
    }

    .text-primary {
        color: var(--primary-color) !important;
    }

    .btn-outline-primary {
        border-color: var(--primary-color);
        color: var(--primary-color);
    }

        .btn-outline-primary:hover {
            background-color: var(--primary-color);
            color: white;
        }

    body {
        background-color: var(--background-color);
        color: var(--text-color);
    }
</style>